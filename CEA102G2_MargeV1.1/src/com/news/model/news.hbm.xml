<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
 PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
 
 <hibernate-mapping>
 	 <class name="com.news.model.NewsVO" table="news"> 

        <id name="newsNo" column="newsNo"> 
            <generator class="identity"/> 
        </id> 

        <property name="newsTime" column="newsTime" type="timestamp"/> 

        <property name="newsTitle" column="newsTitle"/> 
        <property name="newsCon" column="newsCon"/> 
        <property name="newsPic" column="newsPic"/> 

    </class> 
 </hibernate-mapping>